  <script>
    // ===== Success + Google Sheet Submit Script =====
    const form = document.getElementById("registerForm");
    const successBox = document.getElementById("successBox");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      // Get field values
      const fullName = form.querySelector("input[placeholder='Enter your full name']").value;
      const email = form.querySelector("input[placeholder='Enter your email']").value;
      const phone = form.querySelector("input[placeholder='Enter your phone number']").value;

      try {
        // ---- SEND TO NODE BACKEND ----
        const response = await fetch("http://localhost:3000/api/register", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ fullName, email, phone })
        });

        const result = await response.json();

        // ---- SUCCESS ----
        if (result.success) {
          form.style.display = "none";
          successBox.style.display = "block";

          setTimeout(() => {
            modal.style.display = "none";
            form.reset();
            form.style.display = "flex";
            successBox.style.display = "none";
          }, 2000);
        } else {
          alert("Failed to save data. Try again.");
        }
      } catch (error) {
        console.error("Error:", error);
        alert("Something went wrong!");
      }
    });
  </script>




