footer{margin-top:22px;color:var(--muted);font-size:13px}
.pill{display:inline-block;padding:6px 10px;border-radius:999px;background:linear-gradient(90deg,#fff,#f5fbff);font-weight:600}
.item-hover{transition:transform .22s ease, box-shadow .22s ease}
.item-hover:hover{transform:translateY(-8px) scale(1.02); box-shadow:0 22px 45px rgba(12,15,29,0.1);}
