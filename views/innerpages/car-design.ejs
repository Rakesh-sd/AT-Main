      <script>
        // Accordion syllabus
        document.querySelectorAll('#syllabus .item').forEach((it) => {
          it.addEventListener('click', () => {
            const next = it.nextElementSibling;
            const open = it.getAttribute('data-open') === 'true';
            document.querySelectorAll('#syllabus .content').forEach(c => c.style.display = 'none');
            document.querySelectorAll('#syllabus .item').forEach(i => i.setAttribute('data-open', 'false'));
            if (!open) { next.style.display = 'block'; it.setAttribute('data-open', 'true') }
          })
        });

        // FAQ toggle
        document.querySelectorAll('.faq .q').forEach(q => {
          q.addEventListener('click', () => {
            const ans = q.nextElementSibling;
            const visible = ans.style.display === 'block';
            ans.style.display = visible ? 'none' : 'block';
          })
        });

        // Enroll & Brochure buttons
        document.getElementById('enrollBtn').addEventListener('click', () => { alert('Enroll flow — replace with signup modal.'); })
        document.getElementById('brochureBtn').addEventListener('click', () => {
          const blob = new Blob([`Machine Learning — Course Brochure\n\nModules:\n1. Intro\n2. Supervised\n3. Trees\n4. Unsupervised\n5. Deployment\n`], { type: 'text/plain' });
          const url = URL.createObjectURL(blob);
          const a = document.createElement('a'); a.href = url; a.download = 'ML-brochure.txt'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
        });

        // Keyboard accessibility
        document.querySelectorAll('.accordion .item, .faq .q').forEach(el => {
          el.setAttribute('tabindex', 0);
          el.addEventListener('keydown', (e) => { if (e.key === 'Enter' || e.key === ' ') el.click(); })
        });

        // Scroll animations
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            }
          });
        }, { threshold: 0.1 });
        document.querySelectorAll('.section, .hero-left, .hero-right, .accordion .item, .faq .q').forEach(el => {
          observer.observe(el);
        });

        // Parallax effect on hero and badges
        window.addEventListener('scroll', () => {
          const scrollTop = window.scrollY;
          document.querySelectorAll('.hero-left, .hero-right').forEach(el => {
            el.style.transform = `translateY(${scrollTop * 0.1}px)`;
          });
          document.querySelectorAll('.badge, .tag,').forEach(el => {
            el.style.transform = `translateY(${scrollTop * 0.05}px)`;
          });
        });

        // Background floating shapes
        const canvas = document.getElementById('bgCanvas');
        const ctx = canvas.getContext('2d');
        let shapes = [];
        function resizeCanvas() { canvas.width = window.innerWidth; canvas.height = window.innerHeight; }
        window.addEventListener('resize', resizeCanvas);
        resizeCanvas();
        for (let i = 0; i < 60; i++) { shapes.push({ x: Math.random() * canvas.width, y: Math.random() * canvas.height, r: Math.random() * 30 + 5, dx: (Math.random() - 0.5) * 0.5, dy: (Math.random() - 0.5) * 0.5 }); }
        function animate() {
          ctx.clearRect(0, 0, canvas.width, canvas.height);
          shapes.forEach(s => {
            s.x += s.dx; s.y += s.dy;
            if (s.x > canvas.width || s.x < 0) s.dx *= -1;
            if (s.y > canvas.height || s.y < 0) s.dy *= -1;
            ctx.beginPath();
            ctx.arc(s.x, s.y, s.r, 0, Math.PI * 2);
            ctx.fillStyle = '#fff';
            ctx.fill();
          });
          requestAnimationFrame(animate);
        }
        animate();
      </script>
