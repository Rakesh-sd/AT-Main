                    </section>

                    <!-- Instructor -->
                    <section class="section alt item-hover">
                        <h2>Instructor</h2>
                        <div class="teacher">
                            <div class="avatar">AK</div>
                            <div>
                                <div class="teacher-info-strong">Ananya Kapoor</div>
                                <div class="teacher-info">Machine Learning Engineer — 8+ years experience</div>
                                <div class="teacher-info">Office hours: Wed & Sun 6–8 PM</div>
