<style>
  *, *::before, *::after { margin:0; padding:0; box-sizing:border-box; }
  body { font-family:'Poppins', sans-serif; line-height:1.6; color:#333; overflow-x:hidden; }

  :root {
    --primary: #49007F;
    --accent: #FFAA00;
    --light: #F7F9FC;
    --secondary: #3F6DFF;
    --bg-syllabus: #f0f7ff;
    --bg-plans: #fff8e7;
    --bg-faq: #f9f9f9;
    --bg-cta: #0F1F4F;
  }

  a { text-decoration:none; color:inherit; }
  img { max-width:100%; display:block; }

  /* ---------- FADE-IN ---------- */
  /* .fade-in { opacity:0; transform:translateY(20px); transition: all 0.8s ease-out; }
  .fade-in.show { opacity:1; transform:translateY(0); } */

  /* ---------- HERO ---------- */
  header.hero { background:#fff; color:var(--primary); text-align:center; padding:100px 20px 80px; }
  header.hero h1 { font-size:2.8rem; margin-bottom:1rem; }
  header.hero p { font-size:1.2rem; opacity:0.9; max-width:700px; margin:0 auto; }

  /* ---------- CONTAINERS ---------- */
  .container { max-width:1100px; margin:0 auto; padding:60px 20px; }

  /* ---------- STATS ---------- */
  .stats-section { background:var(--primary); }
  .stats { display:flex; justify-content:space-around; gap:20px; flex-wrap:wrap; text-align:center; }
  .stats .item { background:#fff; color:var(--primary); border-radius:10px; padding:30px 20px; flex:1 1 250px; box-shadow:0 2px 8px rgba(0,0,0,0.08); transition: transform 0.4s ease, box-shadow 0.4s ease; }
  .stats .item:hover { transform:translateY(-8px); box-shadow:0 6px 15px rgba(0,0,0,0.15); }
  .stats h2 { color:var(--accent); font-size:2rem; }
  .stats p { font-weight:500; margin-top:5px; }

  /* ---------- SYLLABUS ---------- */
  .syllabus-section { background:#fff; }
  .syllabus-section h2 { text-align:center; color:var(--primary); margin-bottom:30px; }
  .syllabus-item { background:var(--light); border-radius:8px; margin-bottom:15px; overflow:hidden; box-shadow:0 2px 8px rgba(0,0,0,0.08); transition: all 0.3s ease; }
  .syllabus-header { padding:20px; cursor:pointer; font-weight:600; color:var(--primary); position:relative; }
  .syllabus-header::after { content:'+'; position:absolute; right:20px; font-weight:bold; color:var(--accent); font-size:1.5rem; transition:transform 0.3s ease; }
  .syllabus-item.active .syllabus-header::after { content:'−'; transform:rotate(180deg); }
  .syllabus-content { max-height:0; overflow:hidden; background:white; transition:max-height 0.5s ease; padding:0 20px; }
  .syllabus-content ul { list-style:disc; padding:15px 0 15px 20px; color:#555; }

  /* ---------- PLANS ---------- */
  .plans-section { background: var(--primary); }
  .plans h2 { text-align:center; color:var(--primary); margin-bottom:40px; }
  .plan-cards { display:grid; grid-template-columns:repeat(auto-fit,minmax(260px,1fr)); gap:20px; }
  .plan { border:1px solid #eee; border-radius:12px; padding:30px 20px; text-align:center; transition: all 0.3s ease; box-shadow:0 2px 8px rgba(0,0,0,0.08); }
  .plan:hover { transform:translateY(-6px); border-color:var(--accent); box-shadow:0 6px 15px rgba(0,0,0,0.15); }
  .plan h3 { color:#fff; margin-bottom:10px; }
  .plan .price { font-size:2rem; color:var(--accent); margin:10px 0; }
  .plan button { background:var(--accent); color:#fff; border:none; padding:12px 25px; border-radius:5px; cursor:pointer; font-weight:600; transition:0.3s; }
  .plan button:hover { background:#e89a00; }

  /* ---------- FAQ ---------- */
  .faq-section { background: var(--bg-faq); color:var(--primary);}
  .faq h2 { text-align:center; color:var(--primary); margin-bottom:30px; }
  .faq-item { background:var(--light); border-radius:8px; margin-bottom:15px; overflow:hidden; box-shadow:0 2px 8px rgba(0,0,0,0.08); }
  .faq-question { padding:20px; cursor:pointer; font-weight:600; position:relative; color:var(--primary); }
  .faq-question::after { content:'+'; position:absolute; right:20px; font-size:1.5rem; color:var(--accent); transition: transform 0.3s ease; }
  .faq-item.active .faq-question::after { content:'−'; transform:rotate(180deg); }
  .faq-answer { max-height:0; overflow:hidden; padding:0 20px; transition:max-height 0.5s ease; background:white; }
  .faq-answer p { padding:15px 0; }

  /* ---------- CTA ---------- */
  .cta { background:var(--primary); color:white; text-align:center; padding:70px 20px; }
  .cta button { background:var(--accent); border:none; color:#fff; padding:15px 30px; font-size:1rem; border-radius:6px; cursor:pointer; transition:0.3s; }
  .cta button:hover { background:#e89a00; }

  @media(max-width:768px){ header.hero{padding:60px 15px} header.hero h1{font-size:2rem} }
</style>
</head>
