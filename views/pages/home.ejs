            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .cert-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .cert-card-content {
