        /* Career Guidance Section */
        .career {
            width: 100%;
            background-color: #49007F;
            /* full red background */
            padding: 60px 5%;
            display: flex;
            justify-content: center;
        }

        .career-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 50px;
            max-width: 1200px;
        }

        .career-content {
            flex: 1 1 350px;
