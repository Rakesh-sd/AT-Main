            border-radius: 8px;
            color: #49007F;
            font-weight: 700;
            cursor: pointer;
            transition: 0.3s;
        }

        .cert-btn:hover {
            background-color: #49007F;
            color: #fff;
            border: 2px solid #fff;
        }

        .cert-cards-container {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
        }

        .cert-card {
